<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"



    tools:context=".signin">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="120dp"
        android:text="LOGIN"
        android:gravity="center"
        android:fontFamily="@font/c"
        android:textSize="50dp"/>




    <EditText
        android:layout_width="272dp"
        android:layout_height="wrap_content"

        android:hint="USERNAME"
        android:layout_gravity="center"
        android:id="@+id/userid"
        android:gravity="center"
        android:fontFamily="@font/c"
        android:drawableLeft="@drawable/groupblack"
        />

    <EditText
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:id="@+id/passwordid"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"

        android:drawableLeft="@drawable/lockblack"
        android:fontFamily="@font/c"
        android:gravity="center"
        android:hint="PASSWORD" />


    <androidx.cardview.widget.CardView
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@android:color/holo_green_dark">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:onClick="signin1"
            android:text="Sign In"
            android:fontFamily="@font/c"
            android:textSize="20dp"
            />

    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Don't Have an Account?Register now!"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:onClick="reg"/>






    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="100dp"





        android:alpha="1"

        app:menu="@menu/navbar"></com.google.android.material.bottomnavigation.BottomNavigationView>



</LinearLayout>
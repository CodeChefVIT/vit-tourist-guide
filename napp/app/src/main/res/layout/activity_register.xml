<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".register">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:text="SIGNUP"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/cland"

        />


    <EditText
        android:layout_width="280dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/c"
        android:id="@+id/cname"
        android:gravity="center"
        android:hint="Club/Chapter Name"
        android:drawableLeft="@drawable/groupblack"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="67dp"
        android:id="@+id/tname"
        android:layout_gravity="center"
        android:hint="TEACHER COORDINATOR"
        android:drawableLeft="@drawable/personblack"
        android:fontFamily="@font/c"
        android:gravity="center"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:id="@+id/sname"
        android:hint="PRESIDENT NAME"
        android:drawableLeft="@drawable/personblack"
        android:gravity="center"
        android:fontFamily="@font/c"
        />
    <EditText
        android:layout_width="280dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:id="@+id/password"

        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:gravity="center"
        android:fontFamily="@font/c"

        android:drawableLeft="@drawable/lockblack"
        />
    <EditText
        android:layout_width="280dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:hint="CONFIRM PASSWORD"
        android:id="@+id/cpassword"
        android:drawableLeft="@drawable/lockblack"
        android:inputType="textPassword"

        android:gravity="center"
        android:fontFamily="@font/c"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@android:color/holo_orange_light"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="Sign up"
            android:fontFamily="@font/cland"
            android:textSize="30dp"
            android:onClick="register1"
            />


    </androidx.cardview.widget.CardView>


</LinearLayout>